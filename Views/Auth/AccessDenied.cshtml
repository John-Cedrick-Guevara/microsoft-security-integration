@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h2 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Access Denied
                    </h2>
                </div>
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-lock-fill text-danger" style="font-size: 72px;"></i>
                    </div>
                    
                    <h4 class="mb-3">Insufficient Permissions</h4>
                    
                    <p class="text-muted mb-4">
                        You do not have the required permissions to access this resource.
                        This page is restricted to users with specific roles.
                    </p>

                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle"></i> 
                        <strong>Your current role:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                    </div>

                    <div class="d-grid gap-2 d-md-block mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                    </div>

                    <hr class="my-4">

                    <p class="small text-muted mb-0">
                        If you believe you should have access to this resource, please contact your system administrator.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
